{
  "manifest_version": 2,

  "name": "Weblint",
  "description": "Cleans the web's lint.",
  "version": "0.2.0",

  "browser_action": {},

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": [
    "site-rules/*"
  ],

  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
